<!-- views/planets/new.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Create a planet!</title>
  </head>
  <body>
    <h1>Welcome to the Planets app!</h1>
    <%- include('../partials/nav') %>  
    <h2>Fill out the form below to add a planet to our list!</h2>
    <div id="form">
      <form action="/planets" method="POST">
          <label for="name">Name:</label>
          <input type="text" name="name" id="name" />

          <label for="planetType">Type:</label>
          <select name="planetType" id="type">

           <% uniquePlanetTypes.forEach((planetType) => { %>
            <option value="<%= planetType %>"><%= planetType %></option>
            <% }) %>
           
          </select>

          <label for="size">Size:(in miles)</label>
          <input type="number" name="size" id="size" />

          <label for="planetIsHabitable">Is the planet habitable?</label>
          <input type="checkbox" name="planetIsHabitable" id="planetIsHabitable" />

          <button type="submit" id="add">Add Planet</button>
      </form>
    </div>
    <%- include('../partials/footer') %>
  </body>
</html>
